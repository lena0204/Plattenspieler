<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_titles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

    </android.support.v7.widget.RecyclerView>

    <!-- IDEA_ Gleiches Layout fÃ¼r beide Ansichten, Shuffle von allen auf den Hauptseite -->

    <ImageButton
        android:id="@+id/fab_shuffle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/fab_background"
        android:contentDescription="@string/iv_cd_fab_shuffle"
        android:cropToPadding="true"
        android:elevation="6dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_shuffle" />


</FrameLayout>