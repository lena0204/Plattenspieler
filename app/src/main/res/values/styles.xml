<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AppThemeT" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="android:colorPrimary">@color/colorPrimary_t</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_t</item>
        <item name="android:colorAccent">@color/colorAccent_t</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>

    <style name="AppThemeDarkT" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimary_t</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_t</item>
        <item name="android:colorAccent">@color/colorAccent_t</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="AppThemeL" parent="android:Theme.Material.Light">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:colorAccent">@color/darkgrey</item>
    </style>
    <style name="AppThemeDarkL" parent="android:Theme.Material">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:colorAccent">@color/light_grey</item>
    </style>
    <style name="AppThemeBlackL" parent="android:Theme.Material">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:colorAccent">@color/light_grey</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">?android:attr/textColor</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
